{
    "name": "codifico/phpspec-rest-view-extension",
    "type": "phpspec-extension",
    "description": "REST View matcher",
    "keywords": ["codifico", "phpspec", "bdd", "rest", "matcher"],
    "homepage": "http://codifico.pl",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcin Dryka",
            "email": "marcin@codifico.pl"
        }
    ],

    "require": {
        "php": ">=5.4",
        "phpspec/phpspec": "~2.0",
        "coduo/php-matcher": "^1.1",
        "friendsofsymfony/rest-bundle": "~1.5",
        "jms/serializer": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.0.7",
        "symfony/process": "~2.1",
        "behat/behat": "~3.0,>=3.0.4"
    },

    "autoload": {
        "psr-4": { "Codifico\\PhpSpec\\RestViewExtension\\": "src/" }
    },

    "config": {
        "bin-dir": "bin/"
    }
}
